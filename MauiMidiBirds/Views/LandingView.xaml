<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiMidiBirds.Views.LandingView"
             xmlns:viewModels="clr-namespace:MauiMidiBirds.ViewModels"
             Title="LandingView">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to MAUI Midi Birds!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            Text="Latest Key:"
            Style="{StaticResource Headline}"/>

        <Label
            Text="{Binding LatestKey}"
            Style="{StaticResource SubHeadline}" />

        <toolkit:MediaElement x:Name="BirdNoise"
                      ShouldAutoPlay="True"
                      ShouldShowPlaybackControls="True"
                      Source="{Binding BirdSong}"
                      HeightRequest="300"
                      WidthRequest="400"
                      />
    </VerticalStackLayout>

    

</ContentPage>
